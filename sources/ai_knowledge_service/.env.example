# AI Knowledge Service Configuration
# Copy this file to .env and fill in your values

# ==============================================================================
# LLM Configuration
# ==============================================================================
# API key for OpenAI-compatible LLM service (e.g., DashScope)
LLM_API_KEY=sk-xxx

# Base URL for the LLM API
LLM_BASE_URL=https://dashscope.aliyuncs.com/compatible-mode/v1/

# Model name to use
LLM_MODEL=qwen-plus

# ==============================================================================
# Embedding Configuration (DashScope)
# ==============================================================================
# API key for DashScope embedding service
DASHSCOPE_API_KEY=sk-xxx

# Embedding model name
DASHSCOPE_MODEL_NAME=text-embedding-v4

# Embedding vector dimensions
DASHSCOPE_DIMENSIONS=1024

# ==============================================================================
# Qdrant Vector Database Configuration
# ==============================================================================
# Qdrant server URL
QDRANT_URL=http://localhost:6333

# Qdrant API key (optional, leave empty for local dev)
# QDRANT_API_KEY=

# ==============================================================================
# Storage Configuration
# ==============================================================================
# Base path for file storage (raw files, databases)
STORAGE_BASE_PATH=./data

# ==============================================================================
# Scheduler Configuration
# ==============================================================================
# Maximum number of worker threads for task processing
SCHEDULER_MAX_WORKERS=2

# Queue poll interval in seconds
SCHEDULER_POLL_INTERVAL=1.0

# ==============================================================================
# Application Configuration
# ==============================================================================
# Enable debug mode (more verbose logging)
# DEBUG=false

# Logging level (DEBUG, INFO, WARNING, ERROR)
# LOG_LEVEL=INFO
