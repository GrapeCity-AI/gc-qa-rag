# GC-QA-RAG Server Environment Variables
# Copy this file to .env and fill in your values
# Or set these as Docker environment variables

# Environment (optional, defaults to "production")
GC_QA_RAG_ENV=production

# === Required Configuration ===
# Default LLM configuration (required)
GC_QA_RAG_LLM_DEFAULT_API_KEY=your_llm_api_key_here
GC_QA_RAG_LLM_DEFAULT_API_BASE=https://dashscope.aliyuncs.com/compatible-mode/v1
GC_QA_RAG_LLM_DEFAULT_MODEL_NAME=qwen-plus

# Embedding API key (required)
GC_QA_RAG_EMBEDDING_API_KEY=your_embedding_api_key_here

# Specialized LLM configurations (optional, falls back to default)
# Think mode (reasoning)
GC_QA_RAG_LLM_THINK_API_KEY=
GC_QA_RAG_LLM_THINK_API_BASE=
GC_QA_RAG_LLM_THINK_MODEL_NAME=deepseek-r1

# Summary mode
GC_QA_RAG_LLM_SUMMARY_API_KEY=
GC_QA_RAG_LLM_SUMMARY_API_BASE=
GC_QA_RAG_LLM_SUMMARY_MODEL_NAME=

# Query mode
GC_QA_RAG_LLM_QUERY_API_KEY=
GC_QA_RAG_LLM_QUERY_API_BASE=
GC_QA_RAG_LLM_QUERY_MODEL_NAME=

# Research mode
GC_QA_RAG_LLM_RESEARCH_API_KEY=
GC_QA_RAG_LLM_RESEARCH_API_BASE=
GC_QA_RAG_LLM_RESEARCH_MODEL_NAME=

# === Database and Services Configuration ===
# Vector database host (optional)
GC_QA_RAG_VECTOR_DB_HOST=http://rag_qdrant_container:6333
# Database connection string (optional)
GC_QA_RAG_DB_CONNECTION_STRING=mysql+mysqlconnector://root:12345678@rag_mysql_container:3306/search_db
# ETL service base URL (optional)
GC_QA_RAG_ETL_BASE_URL=http://host.docker.internal:8001
# Log path (optional)
GC_QA_RAG_LOG_PATH=
